{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "plugins/*": ["src/plugins/*"],
      "store/*": ["src/store/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "node_modules",
    "unpackage",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
